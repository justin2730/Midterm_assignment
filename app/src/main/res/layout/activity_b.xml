<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/backgrand5"
    >
    <TextView
        android:id="@+id/page2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第2頁"
        android:textSize="25dp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn2_to_1"
        android:onClick="page1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="回首頁" />

    <TextView
        android:id="@+id/txv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="音樂遊戲"
        android:textSize="55dp"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textColor="@android:color/white">

        <TextView
            android:id="@+id/txv2.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="phigros"
            android:textSize="45dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/img2.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:src="@drawable/phigros" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img2.2"
            android:layout_width="0dp"
            android:layout_height="162dp"
            android:layout_weight="4"
            android:src="@drawable/arcaea" />

        <TextView
            android:id="@+id/txv2.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="arcaea"
            android:textSize="50dp"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txv2.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="世界計畫 繽紛舞台！ feat.初音未來"
            android:textSize="30dp"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/img2.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:src="@drawable/pjsk" />

    </LinearLayout>

</LinearLayout>
